<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:SilkHat.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:TypeDefinitionViewModel"
             x:Class="SilkHat.Views.TypeDefinitionView">

        <StackPanel Orientation="Vertical" Background="Transparent">

            <TextBlock Text="{Binding TypeNode.Name}" />

            <TextBlock Text="Methods" />
            <ListBox ItemsSource="{Binding MethodNodes}" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="11" Text="{Binding Name}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock Text="Properties" />
            <ListBox ItemsSource="{Binding PropertyNodes}" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock FontSize="11" Text="{Binding Name}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </StackPanel>
</UserControl>